{
  "extends": "stylelint-config-standard",
  "rules": {
    "color-hex-case": "lower",
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "no-descending-specificity": null,
    "selector-class-pattern": null
  },
  "plugins": [
    "stylelint-scss"
  ],
  "customSyntax": "postcss-scss",
  "ignoreFiles": [
    "dist/*",
    ".idea/*",
    "node_modules/*",
    ".parcel-cache/*"
  ]
}